{% extends 'base.html.twig' %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
<section class="page-section" >
    <p></p>
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-7">
            <div class="container">
                <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Je me connecte</h2>
                <!-- Icon Divider-->
                <div class="divider-custom">
                    <div class="divider-custom-line"></div>
                    <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                    <div class="divider-custom-line"></div>
                </div>
            <form action="{{ path('app_login') }}" method="post">
                <div class="form-floating mb-3">
                <label for="username"></label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Email">
                </div>
                <div class="form-floating mb-3">
                <label for="password"></label>
                <input type="password" id="password" name="_password" placeholder="Password">
                </div>
                {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"> #}

                <button class="btn btn-primary btn-sm" type="submit">Se connecter</button>
            </form>
        </div>
    </div>
    </div>
</section>
{% endblock %}
