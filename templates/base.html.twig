{#        {% for message in messages %}#}
{#            <div class="alert">#}
{#                {{ message }}#}
{#            </div>#}
{#        {% endfor %}#}
{#    {% endif %}#}
</nav>

{% block body %}{% endblock %}
</body>
</html>
