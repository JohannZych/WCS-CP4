{% extends 'base.html.twig' %}

{% block title %}Recherche offres d'emplois{% endblock %}

{% block body %}

    <section class="page-section">
        <p></p>
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-7">
                <div class="container">
                    <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Je recherche une
                        offre d'emploi</h2>
                    <!-- Icon Divider-->
                    <div class="divider-custom">
                        <div class="divider-custom-line"></div>
                        <div class="divider-custom-icon"><i
                                    class="fas fa-star fs-1"></i></div>
                        <div class="divider-custom-line"></div>
                    </div>
                    <div class="form-control bg-secondary text-white">
                        {{ form_start(form, {'attr': {'class': 'searchBar'}}) }}
                        {{ form_widget(form, {'attr': {'class': 'inputSearchBar'}}) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="page-section">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-7">
                <div class="container">
                    {% if jobs is defined %}
                        <h3 class="text-center text-uppercase text-secondary mb-0">Mes Résultats</h3>
                        <p></p>
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>Intitulé</th>
                                <th>Commentaires</th>
                                <th>Type de contrat</th>
                                <th>Entreprise</th>
                                <th>Ville</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for job in jobs %}
                                <tr>
                                    <td>{{ job.title }}</td>
                                    <td>{{ job.content }}</td>
                                    <td>{{ job.typeJob }}</td>
                                    <td>{{ job.entreprise }}</td>
                                    <td>{{ job.city }}</td>
                                    <td>
                                        <a href="{{ path('app_jobs_show', {'id': job.id}) }}"
                                           class="btn btn-primary btn-sm">Détails</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="9">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        {% else %}
                            <h3 class="text-center text-uppercase text-secondary mb-0">Pas de résultats</h3>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
